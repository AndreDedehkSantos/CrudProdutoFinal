@model CrudProduto.Models.ViewModels.UsuarioViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Novo</h2>

<h4>Usuario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                *<label asp-for="nome" class="control-label"></label>
                <input asp-for="nome" class="form-control" />
                <span asp-validation-for="nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                *<label asp-for="senha1" class="control-label"></label>
                <input type="password" asp-for="senha1" class="form-control" />
                <span asp-validation-for="senha1" class="text-danger"></span>
            </div>
            <div class="form-group">
                *<label asp-for="senha2" class="control-label"></label>
                <input type="password"  asp-for="senha2" class="form-control" />
                <span asp-validation-for="senha2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Itens com '*' são obrigatórios</label>
            </div>
            <div class="form-group">
                <input type="submit" value="Concluído" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
